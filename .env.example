# Supabase Configuration (RECOMMENDED)
# Next.js naming
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Optional alternative key name seen in some setups
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_publishable_or_anon_key

# Netlify Supabase Extension naming (also supported by this app)
SUPABASE_DATABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# GCP (for Vertex AI if using it)
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=us-central1
GCP_SERVICE_ACCOUNT_KEY=your_gcp_service_account_key

# Optional: NeonDB (if not using Supabase)
# DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/dbname

# Application
NODE_ENV=production
